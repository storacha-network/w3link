{
  "name": "w3s.link",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "w3s.link packages",
  "scripts": {
    "test": "run-s test:*",
    "test:website": "pnpm --filter website test",
    "build:website": "pnpm --filter website build",
    "lint": "standard",
    "clean": "rm -rf node_modules pnpm-lock.yml packages/*/{pnpm-lock.yml,.next,out,coverage,.nyc_output,worker,dist,node_modules}"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "standard": "^17.0.0",
    "wrangler": "^2.0.15"
  },
  "engines": {
    "node": "16.x"
  },
